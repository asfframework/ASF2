package  {		import flash.display.MovieClip;	import asf.core.app.ASF;	import flash.display.Sprite;	import asf.plugins.loadermax.LoaderMaxFactoryPlugin;	import flash.net.URLRequest;	import asf.events.ApplicationEvent;	import asf.core.models.layers.LayerModel;	import asf.core.elements.Layer;	import flash.display.StageAlign;	import flash.display.StageScaleMode;			public class Layers1 extends MovieClip {				private var app:ASF;				public function Layers1( ) 		{			stage.align = StageAlign.TOP_LEFT;			stage.scaleMode = StageScaleMode.NO_SCALE;						app = new ASF( new Sprite( ), root.loaderInfo, new LoaderMaxFactoryPlugin( ) );						app.addEventListener( ApplicationEvent.CONFIG_FILE_LOADED, onConfigLoaded );						app.loadModel( new URLRequest( "layers_01.xml" ) );						addChild( app.view );		}				private function onConfigLoaded( evt:ApplicationEvent ):void		{			trace( "config loaded" );						app.layers.bg.addChild( new Square( 500, 400 ) );			app.layers.main.addChild( new Square( 300, 300 ) );			app.layers.sub.addChild( new Square( 40, 40 ) );		}	}}import flash.display.Shape;internal class Square extends Shape{	public function Square( w:Number, h:Number )	{		var color:uint = Math.round( Math.random( ) * 0xFFFFFF );				graphics.beginFill( color, 1 );		graphics.drawRect( 0, 0, w, h );		graphics.endFill( );	}}