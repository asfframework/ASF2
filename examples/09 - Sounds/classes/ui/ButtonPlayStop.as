package ui {	import asf.core.viewcontrollers.ButtonViewController;	import flash.display.MovieClip;		public class ButtonPlayStop extends ButtonViewController 	{		public function ButtonPlayStop( p_view:MovieClip, sounds:Object = null ) 		{			super( p_view, sounds );						view.$label.stop( );		}				public function showStop( ):void		{			view.$label.gotoAndStop( "stop" );		}				public function showPlay( ):void		{			view.$label.gotoAndStop( "play" );		}	}}